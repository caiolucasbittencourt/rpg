<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>RPG</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div id="game">
    <div id="status">
      <span class="stat">NÃ­vel: <strong><span id="xpValue"><%= player.lvl %></span></strong></span>
      <span class="stat">Vida: <strong><span id="lifeValue"><%= player.hp %></span></strong></span>
      <span class="stat">Ouro: <strong><span id="goldValue"><%= player.gold %></span></strong></span>
    </div>

    <div id="actions">
      <button id="btn1"><%= location.botoes[0] %></button>
      <button id="btn2"><%= location.botoes[1] %></button>
      <button id="btn3"><%= location.botoes[2] %></button>
    </div>

    <div id="enemyStatus" style="display:none;">
      <span class="stat">Inimigo: <strong><span id="enemyName"></span></strong></span>
      <span class="stat">Vida: <strong><span id="enemyLife"></span></strong></span>
    </div>

    <div id="message">
        <%- location.texto %>
    </div>
  </div>

  <script src="/script.js"></script>
</body>
</html>